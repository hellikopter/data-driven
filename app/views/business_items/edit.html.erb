<h1><%= @business_item[:title] %></h1>

<%= form_tag(method: :post) do %>
	<%= label_tag(:concept, "Concept") %>
	<%= select_tag(:concept, options_for_select(@concepts)) %>
	
	<%= submit_tag("add") %>

	<ul>
		<% @business_item[:concepts].each do |concept| %>
			<li>
				<span><%= concept[:label] %></span>
				<button name="remove" value="<%= concept[:id]%>">remove</button>
			</li>
		<% end %>
	</ul>

<% end %>

<%= link_to order_paper_business_item_path(@business_item[:date].strftime("%F"), @business_item[:id]) do %>
	Back to business item
<% end %>


