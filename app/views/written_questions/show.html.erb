<h1>Written question details</h1>
<dl>
	<dt>House</dt>
	<dd><%= link_to house_path(@written_question[:house][:id]) do %>
			<%= @written_question[:house][:label] %>
		<% end %>
	</dd>
	<dt>Asked by</dt>
	<dd><%= link_to person_path(@written_question[:question_member][:id]) do %>
			<%= @written_question[:question_member][:name]%>
		<% end %>
	</dd>
	<dt>Asked on</dt>
	<dd><%= @written_question[:date].strftime("%d %B %Y") %></dd>
	<dt>Text</dt>
	<dd><%= @written_question[:text] %></dd>	
</dl>

<fieldset>
  <legend>Subjects</legend>
  <ul>
    <% @written_question[:subjects].each do |subject| %>
        <li>
          <%= link_to concept_path(subject[:id]) do %>
              <%= subject[:label] %>
          <% end %>
        </li>
    <% end %>
  </ul>
</fieldset>

<fieldset> 
	<legend>Answer</legend>
	<dl>
		<dt>Answered by</dt>
		<dd><%= link_to person_path(@written_question[:answer][:member][:id]) do %>
				<%= @written_question[:answer][:member][:name] %>
			<% end %>
		</dd>
		<dt>Answered on</dt>
		<dd><%= @written_question[:answer][:date].strftime("%d %B %Y") %></dd>
		<dt>Text</dt>
		<dd><%= strip_tags(@written_question[:answer][:text]) %></dd>
	</dl>
</fieldset>
