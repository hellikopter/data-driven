<dl>
	<dt>Title</dt>
	<dd>
		<%= @order_paper_item[:title] %>
	</dd>
	<dt>Business Item type:</dt>
	<dd>
		<% unless @order_paper_item[:business_item_type] == "" %>
			<%= @order_paper_item[:business_item_type] %>
		<% else %>
			Not specified yet
		<% end %>
	</dd>
	<dt>Index status: </dt>
	<dd>
		<%= @order_paper_item[:index_label] == "indexed" ? "Indexed" : "Indexing required" %>	
	</dd>
	<dt>Junk status: </dt>
	<dd>
		<%= @order_paper_item[:junk_label] == "junk" ? "Marked as junk" : "Not marked as junk" %>
	</dd>
	<dt>Order Paper</dt>
	<dd>
		<%= link_to "#{@order_paper_item[:date].strftime("%d %B %Y")}", order_paper_business_items_path(@order_paper_item[:date].strftime("%F")) %>
	</dd>
	<% if @order_paper_item[:abstract] != "" %> 
		<dt>Abstract</dt>
			<dd>
				<%= strip_tags(@order_paper_item[:abstract]) %>
			</dd>
	<% end %>

	<% unless @order_paper_item[:person][:id].nil? %> 
		<dt>Member</dt>
			<dd>
				<%= link_to person_path(@order_paper_item[:person][:id]) do %>
					<%= @order_paper_item[:person][:name] %>
				<% end %>
			</dd>
			<% unless @order_paper_item[:person][:role].nil? || @order_paper_item[:person][:role] == "" %>
				<dt>Member role:</dt>
				<dd>
					<%= @order_paper_item[:person][:role] %>
				</dd>
			<% end %>
	<% end %>
</dl>