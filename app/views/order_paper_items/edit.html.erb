<%= render "order_paper_item_details" %>

<%= form_tag(method: :post) do %>
	<label>
		<%= check_box_tag "index_checked", "checked", @indexed_status %>
		Indexed
	</label>
	<br>
	<label>
		<%= check_box_tag "junk_checked", "junk", @junk_status %>
		Mark as Junk
	</label>
	<br>
	<label>
		Edit title: 
		<%= hidden_field_tag 'current_title', @order_paper_item[:title] %>
		<%= text_field_tag 'new_title', @order_paper_item[:title] %>
	</label>
	<br>
	<label>
		Enter a business item type: 
		<%= hidden_field_tag 'current_business_item_type', @business_item_type %>
		<%= text_field_tag 'new_business_item_type', @business_item_type %>
	</label>
	<br>
	<% unless @order_paper_item[:person][:id].nil?  %>
		<label>
			Enter a role for the member:
			<%= hidden_field_tag 'current_member_role', @member_role %>
			<%= text_field_tag 'new_member_role', @member_role %>
		</label>
	<% end %>
	<br>
	<button name="update">update</button>
	<br>
	<br>

	<%= label_tag(:concept, "Concept") %>
	<%= select_tag(:concept, options_for_select(@concepts)) %>
	
	<%= submit_tag("add") %>

	<% unless @order_paper_item[:concepts].empty? %>
		<p>Concepts linked to this item</p>
		<ul>
			<% @order_paper_item[:concepts].each do |concept| %>
				<li>
					<input type="checkbox" name="linked_concepts[]" value="<%= concept[:id] %>"/>
					<label><%= concept[:label] %></label>
				</li>
			<% end %>
		</ul>
		<button name="remove">remove</button>
	<% end %>

<% end %>

<%= link_to order_paper_item_path(@order_paper_item[:id]) do %>
	Back to order paper item
<% end %>


